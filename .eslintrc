{
  "env": {
    "browser": true,
    "es6": true,
    "es2017": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "plugins": [
    "prettier"
  ],
  "globals": {
    "JSX": true
  },
  "rules": {
    "no-var": "error",
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-unused-vars": "off"
  }
}
